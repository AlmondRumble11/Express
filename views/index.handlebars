<h1 class="text-center mb-3">{{title}}</h1>
<form action="/api/users" method="POST" class="mb-4">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" name="name" class="form-control">
    </div>
    <div class="form-group">
        <label for="address">Address</label>
        <input type="address" name="address" class="form-control">
    </div>
    <input type="submit" value="Add a new user" class="btn btn-primary btn-block">
</form>
<h3>All current users</h3>
<ul class="list-group">
    {{#each users}}
        <li class="list-group-item">{{this.name}}:{{this.address}}</li>
    {{/each}}
</ul>

<a href="/api/users" class="btn btn-light mt-4">Go to API</a>